<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChickenHistoryActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_motherCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Mother company\n________________\n\n"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/bg_textview"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bottom_arrow"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_chickenFarm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Chicken farm\n________\n\n"
                android:textColor="#000000"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/bg_textview"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_left_arrow"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_feedingCompany"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="Feeding company\n________\n\n"
                android:textColor="#000000"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/bg_textview"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bottom_arrow"
            />

        <TextView
            android:id="@+id/tv_slaughterhouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Slaughterhouse\n________________\n\n"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/bg_textview"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bottom_arrow"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_market"
            />

    </LinearLayout>

</ScrollView>